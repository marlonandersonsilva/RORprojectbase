<p id="notice"><%= notice %></p>

<h1>Lesions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lesions.each do |lesion| %>
      <tr>
        <td><%= lesion.name %></td>
        <td><%= link_to 'Show', lesion %></td>
        <td><%= link_to 'Edit', edit_lesion_path(lesion) %></td>
        <td><%= link_to 'Destroy', lesion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesion', new_lesion_path %>
